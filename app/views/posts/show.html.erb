<h3> <%= @post.title %> </h3>
<p> <%= link_to 'Edit post', edit_post_path %> </p>
<p> <%= link_to 'Add comment', new_post_comment_path(@post) %> </p>
<p> <%= @post.text %> </p>

<h5> <%= pluralize(@post.comments.length, 'comment') %> so far</h5>
<% @post.comments.each do |comment| %>
<p> <%= time_ago_in_words(Time.now) %></p>
<p> <%= comment.text  %></p>
<% end %>
